<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                        

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeFragment" android:tag="layout/fragment_home_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="406dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:padding="4dp"
            android:text="    Home"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TableLayout
            android:id="@+id/tableLayout3"
            android:layout_width="365dp"
            android:layout_height="148dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/textview_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/locationNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:padding="5dp"
                    android:text="LOCATION NAME"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/textview_border"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/thermoIconimageView"
                        android:layout_width="131dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_thermometer_fill0_wght400_grad0_opsz48" />

                    <TextView
                        android:id="@+id/temperatureTextView"
                        android:layout_width="176dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:text="75 f"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="27dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="H\n\nL"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/highTempTextView"
                            android:layout_width="match_parent"
                            android:layout_height="29dp"
                            android:text="84 f"
                            android:textAlignment="center"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/lowTempTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="69 f"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/black" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="match_parent"
                            android:layout_height="31dp"
                            app:srcCompat="@drawable/ic_air_fill0_wght400_grad0_opsz48" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_compress_fill0_wght400_grad0_opsz48" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/windSpeedTextView"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="10 mph"
                            android:textAlignment="center"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/pressureTextView"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="1 atm"
                            android:textAlignment="center"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="46dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="|"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="34sp" />

                    <LinearLayout
                        android:layout_width="93dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="31dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="5dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/ic_rainy_fill0_wght400_grad0_opsz48" />

                            <TextView
                                android:id="@+id/cloudiness"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="20%"
                                android:textAlignment="center"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/ic_lens_blur_fill0_wght400_grad0_opsz48" />

                            <TextView
                                android:id="@+id/textView17"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="100"
                                android:textAlignment="center"
                                android:textColor="@color/black" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="39dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="|"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="34sp" />

                    <LinearLayout
                        android:layout_width="91dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/ic_humidity_high_fill0_wght400_grad0_opsz48" />

                            <TextView
                                android:id="@+id/textView21"
                                android:layout_width="42dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="10 %"
                                android:textAlignment="center"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/ic_flare_fill0_wght400_grad0_opsz48" />

                            <TextView
                                android:id="@+id/textView22"
                                android:layout_width="42dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="0.4"
                                android:textAlignment="center"
                                android:textColor="@color/black" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </TableLayout>

        <TextView
            android:id="@+id/textView26"
            android:layout_width="363dp"
            android:layout_height="41dp"
            android:layout_marginTop="24dp"
            android:padding="4dp"
            android:text="Favorite Cities"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout3" />

        <ListView
            android:id="@+id/customListView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:divider="@color/cardview_light_background"
            android:dividerHeight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView26" />


    </androidx.constraintlayout.widget.ConstraintLayout>
         