<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CityPageFragment">

    <TextView
        android:id="@+id/cityNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:padding="4dp"
        android:text="City Name"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cityNameTextView" />

    <ImageView
        android:id="@+id/backArrowImageView"
        android:layout_width="24dp"
        android:layout_height="21dp"
        android:src="@drawable/back_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toStartOf="@+id/cityNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tempTextView"
        android:layout_width="91dp"
        android:layout_height="41dp"
        android:gravity="center"
        android:text="Temp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.149" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="43dp"
        android:layout_height="41dp"
        android:src="@drawable/ic_thermometer_fill0_wght400_grad0_opsz48"
        app:layout_constraintEnd_toStartOf="@+id/tempTextView"
        app:layout_constraintTop_toTopOf="@+id/tempTextView" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/divider"
        app:layout_constraintBottom_toBottomOf="@+id/tempTextView"
        app:layout_constraintStart_toEndOf="@+id/tempTextView"
        app:layout_constraintTop_toTopOf="@+id/tempTextView" />

    <TextView
        android:id="@+id/highTempTextView"
        android:layout_width="49dp"
        android:layout_height="23dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-5dp"
        android:gravity="center"
        android:padding="2dp"
        android:text="high"
        app:layout_constraintStart_toEndOf="@+id/tempTextView"
        app:layout_constraintTop_toTopOf="@+id/tempTextView" />

    <TextView
        android:id="@+id/lowTempTextView"
        android:layout_width="49dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:padding="2dp"
        android:text="low"
        app:layout_constraintBottom_toBottomOf="@+id/tempTextView"
        app:layout_constraintStart_toEndOf="@+id/tempTextView"
        app:layout_constraintTop_toBottomOf="@+id/highTempTextView" />

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="130dp"
        android:layout_height="19dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="5dp"
        android:text="description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.604"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tempTextView" />

    <TextView
        android:id="@+id/sunriseTextView"
        android:layout_width="74dp"
        android:layout_height="19dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="sunrise"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionTextView" />

    <TextView
        android:id="@+id/sunsetTextView"
        android:layout_width="68dp"
        android:layout_height="19dp"
        android:layout_marginStart="68dp"
        android:gravity="center"
        android:text="sunset"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.159"
        app:layout_constraintStart_toEndOf="@+id/sunriseTextView"
        app:layout_constraintTop_toTopOf="@+id/sunriseTextView" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="270dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="23dp"
        android:gravity="center"
        android:text="Date"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/tempTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/sunriseIcon"
        android:layout_width="23dp"
        android:layout_height="19dp"
        android:foregroundGravity="center"
        android:src="@drawable/ic_flare_fill0_wght400_grad0_opsz48"
        app:layout_constraintEnd_toStartOf="@+id/sunriseTextView"
        app:layout_constraintTop_toTopOf="@+id/sunriseTextView" />

    <ImageView
        android:id="@+id/sunsetIcon"
        android:layout_width="23dp"
        android:layout_height="19dp"
        android:foregroundGravity="center"
        android:src="@drawable/ic_flare_fill0_wght400_grad0_opsz48"
        app:layout_constraintEnd_toStartOf="@+id/sunsetTextView"
        app:layout_constraintTop_toTopOf="@+id/sunsetTextView" />

    <ImageView
        android:id="@+id/windSpeedIcon"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_air_fill0_wght400_grad0_opsz48"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sunriseTextView" />

    <TextView
        android:id="@+id/windSpeedTextView"
        android:layout_width="73dp"
        android:layout_height="27dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/windSpeedIcon"
        app:layout_constraintTop_toTopOf="@+id/windSpeedIcon" />


    <ImageView
        android:id="@+id/pressureIcon"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_compress_fill0_wght400_grad0_opsz48"
        app:layout_constraintStart_toStartOf="@+id/windSpeedIcon"
        app:layout_constraintTop_toBottomOf="@+id/windSpeedIcon" />

    <TextView
        android:id="@+id/pressureTextView"
        android:layout_width="73dp"
        android:layout_height="27dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/pressureIcon"
        app:layout_constraintTop_toTopOf="@+id/pressureIcon" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="4dp"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/divider"
        app:layout_constraintEnd_toStartOf="@+id/rainIconImageView"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toEndOf="@+id/windSpeedTextView"
        app:layout_constraintTop_toTopOf="@+id/windSpeedTextView" />

    <ImageView
        android:id="@+id/rainIconImageView"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@drawable/ic_rainy_fill0_wght400_grad0_opsz48"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.416"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/windSpeedTextView" />

    <TextView
        android:id="@+id/percentRainTextView"
        android:layout_width="73dp"
        android:layout_height="27dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/rainIconImageView"
        app:layout_constraintTop_toTopOf="@+id/rainIconImageView" />

    <ImageView
        android:id="@+id/feelsLikeIcon"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@drawable/temperature_feels_like"
        app:layout_constraintStart_toStartOf="@+id/rainIconImageView"
        app:layout_constraintTop_toTopOf="@+id/pressureTextView" />

    <TextView
        android:id="@+id/feelsLikeTextView"
        android:layout_width="73dp"
        android:layout_height="27dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/feelsLikeIcon"
        app:layout_constraintTop_toTopOf="@+id/feelsLikeIcon" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="4dp"
        android:layout_height="33dp"
        android:src="@drawable/divider"
        app:layout_constraintEnd_toStartOf="@+id/humidityIcon"
        app:layout_constraintStart_toEndOf="@+id/percentRainTextView"
        app:layout_constraintTop_toTopOf="@+id/imageView14" />

    <ImageView
        android:id="@+id/humidityIcon"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@drawable/ic_humidity_high_fill0_wght400_grad0_opsz48"
        app:layout_constraintEnd_toStartOf="@+id/humidityTextView"
        app:layout_constraintTop_toTopOf="@+id/percentRainTextView" />

    <TextView
        android:id="@+id/humidityTextView"
        android:layout_width="73dp"
        android:layout_height="27dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/percentRainTextView" />

    <ImageView
        android:id="@+id/uviIcon"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginStart="13dp"
        android:src="@drawable/ic_flare_fill0_wght400_grad0_opsz48"
        app:layout_constraintEnd_toStartOf="@+id/uviTextView"
        app:layout_constraintStart_toEndOf="@+id/imageView15"
        app:layout_constraintTop_toTopOf="@+id/feelsLikeTextView" />

    <TextView
        android:id="@+id/uviTextView"
        android:layout_width="73dp"
        android:layout_height="27dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/feelsLikeTextView" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dailyRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:scrollbars="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feelsLikeTextView">

    </androidx.recyclerview.widget.RecyclerView>

    <ImageView
        android:id="@+id/currentIcon"
        android:layout_width="34dp"
        android:layout_height="38dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/descriptionTextView"
        app:layout_constraintEnd_toStartOf="@+id/descriptionTextView"
        app:layout_constraintTop_toTopOf="@+id/descriptionTextView"
        tools:src="@tools:sample/avatars" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="16dp"
        android:text="save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dailyRecyclerView" />


</androidx.constraintlayout.widget.ConstraintLayout>